<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="1"
        android:gravity="center_vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="120dp"
                  android:layout_weight="1"
                  android:orientation="horizontal"
                  android:paddingHorizontal="5dp"
                  android:background="@drawable/rounded_corner"
    >
        <TextView
                android:id="@+id/record_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextWhite"
                android:textSize="12dp"
                android:background="@color/colorTextGray"
        />

        <LinearLayout android:layout_width="124dp"
                      android:layout_height="wrap_content"
                      android:paddingVertical="12dp"
                      android:paddingHorizontal="6dp"
        >

            <ImageView
                    android:id="@+id/food_images"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
            />
        </LinearLayout>

        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/recipe_type"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:height="22dp"
                    android:textColor="@color/colorTextWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:background="@drawable/recipe_type_background"
                    android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                    android:layout_marginRight="1dp" android:layout_marginEnd="1dp"/>

            <TextView
                    android:id="@+id/comment"
                    android:layout_below="@+id/recipe_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="8dp"
                    android:paddingRight="18dp"
                    android:textSize="14dp"
            />

            <TextView
                    android:id="@+id/recorded_at"
                    android:layout_below="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextGray"
                    android:textSize="14dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
